# Scholarly App Environment Variables
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://scholarly:localdev123@postgres:5432/scholarly

# Environment
ENVIRONMENT=development
DEBUG=true

# Sentry (Error tracking & performance monitoring)
SENTRY_DSN=your-sentry-dsn-here

# AI Provider Configuration
# Primary: Moonshot/Kimi K2 (recommended)
AI_PROVIDER=moonshot
AI_MODEL=kimi-k2-0711-preview
MOONSHOT_API_KEY=your-moonshot-api-key-here
MOONSHOT_BASE_URL=https://api.moonshot.ai/v1

# Alternative: NVIDIA NIM
# AI_PROVIDER=nvidia
# AI_MODEL=nvidia/llama-3.1-nemotron-nano-4b-v1.1
NVIDIA_API_KEY=
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1

# Vision provider for handwriting recognition
VISION_PROVIDER=openai
VISION_MODEL=gpt-4o
OPENAI_API_KEY=

# Optional AI Providers
GROQ_API_KEY=
TOGETHER_API_KEY=
HUGGINGFACE_API_KEY=

# AWS Bedrock (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Frontend
VITE_API_URL=http://localhost:8000
